@{
    ViewBag.Title = "Registrarse";
    Layout = "~/Views/Shared/_AnonimoLayout.cshtml";
}
@model Models.UsuariosRegister

@Styles.Render("~/Content/bootstrap-datepicker.min.css")

<div class="container">
    <div class="row justify-content-md-center">
        <div class="card-wrapper mb-5">
            <div class="brand">
                <a href="@Url.Action("Inicio","Inicio")"><img src="@Url.Content("~/Images/Views/Seguridad/logoBordeBlanco.png")" alt="logo"></a>
            </div>
            <div class="card fat">
                <div class="card-body">
                    <h4 class="card-title">Registrar Usuario</h4>
                    <form method="POST" action="@Url.Action("Registrar","Seguridad")" id="formularioRegistro">

                        <div>
                            <label for="inputEmail">Correo Electronico</label>
                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", placeholder = "Ingrese su Email", @type = "email" } })
                            <div class="errorSolidam"><b>@Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })</b></div>
                        </div>

                        <div>
                            <label for="inputPassword">Contraseña</label>
                            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", placeholder = "Ingrese su contraseña", @type = "password" } })
                            <div class="errorSolidam"><b>@Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })</b></div>
                        </div>

                        <div>
                            <label for="inputPassword">Confirmar Contraseña</label>
                            @Html.EditorFor(model => model.Repassword, new { htmlAttributes = new { @class = "form-control", placeholder = "Confirme su contraseña", @type = "password" } })
                            <div class="errorSolidam"><b>@Html.ValidationMessageFor(model => model.Repassword, "", new { @class = "text-danger" })</b></div>
                        </div>

                        <div>
                            <label for="inputFechaNacimiento">Fecha de Nacimiento</label>
                            <div class="input-group date" data-provide="datepicker">
                                @Html.EditorFor(model => model.FechaNacimiento, new { htmlAttributes = new { id = "inputFecha", @class = "form-control", placeholder = "Ingrese su fecha de nacimiento", @type = "text", autocomplete = "off" } })
                                <div class="input-group-addon">
                                    
                                </div>
                            </div>
                            <div class="errorSolidam"><b>@Html.ValidationMessageFor(model => model.FechaNacimiento, "", new { @class = "text-danger" })</b></div>
                        </div>

                        <div class="form-group my-3">
                            <button type="submit" value="Registrar" class="btn btn-primary btn-block" id="btnRegistrar">Registrar</button>
                        </div>

                        <div class="mt-4 text-center">
                            Ya tienes una cuenta? <a href="@Url.Action("Iniciar","Seguridad")">Inicia Sesion</a>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


@Scripts.Render("~/Scripts/bootstrap-datepicker.min.js")
@Scripts.Render("~/Scripts/locales/bootstrap-datepicker.es.min.js")
@Scripts.Render("~/Scripts/Views/Seguridad/Registrar.js")