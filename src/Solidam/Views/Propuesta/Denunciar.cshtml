
@{
    ViewBag.Title = "Denunciar";
}
@using Models
@model Solidam.ViewModel.DenunciaViewModel
<div class="container">
    <h2>Denunciar propuesta @Model.NombrePropuesta</h2>
    <div>
        <form>
            <div class="form-group">
                <label>Motivo de la denuncia:</label>
                <select name="" class="form-control">
                    <option value="0" selected disabled>Seleccione un motivo</option>
                    @foreach (MotivoDenuncia motivo in Model.MotivoDenuncia)
                    {
                        <option value="@motivo.IdMotivoDenuncia">@motivo.Descripcion</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label>Comentarios: </label>
                <textarea class="form-control" rows="5"></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Enviar</button>
        </form>
    </div>
</div>
