@using Enums
@using Helpers
@Styles.Render("~/Content/Views/Shared/pv_Header.css")

<!-- Header Por Defecto -->

<header class="header_area">
    <div class="main_menu">
        <nav class="navbar navbar-expand-lg navbar-light">
            <div class="container">

                <a class="navbar-brand" href="@Url.Action("Inicio","Inicio")">
                    <img src="@Url.Content("~/Images/Views/Inicio/LogoAlt2.png")" alt="">
                </a>

                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

                <div class="col-12 col-lg-6 col-md-4" id="divBuscar">
                    <form class="input-group" method="get" action=@Url.Action("Buscar","Propuesta")>
                        <input type="text" id="inputBuscar" class="form-control" placeholder="Buscar..." name="palabra">
                        <div class="input-group-append">
                            <button class="btn btn-outline-secondary" id="btnBuscar" type="submit"><i class="fa fa-search text-white"></i></button>
                        </div>
                    </form>
                </div>

                <div class="collapse navbar-collapse offset" id="navbarSupportedContent">
                    <div class="row ml-0 w-100">
                        <div class="col-lg-12 pr-0">
                            <ul class="nav navbar-nav center_nav pull-right">

                                <li class="nav-item active">
                                    <a class="nav-link" href="@Url.Action("Inicio", "Inicio")">Inicio</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="@Url.Action("AcercaDe", "Inicio")">Acerca de</a>
                                </li>

                                @if (SessionHelper.Usuario == null)
                                {
                                    <li class="nav-item">
                                        <a class="main_btn" href="@Url.Action("Iniciar", "Seguridad")">Iniciar Sesion</a>
                                    </li>
                                }
                                else
                                {
                                    <li class="nav-item submenu dropdown">
                                        <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><i class="fa fa-user-circle mr-1"></i>Cuenta <i class="ml-3 fa fa-caret-down"></i></a>
                                        <ul class="dropdown-menu">
                                            <li class="nav-item">
                                                <a class="nav-link" href="@Url.Action("MiPerfil", "Usuario")"><i class="fa fa-user mr-1"></i>Mi Perfil</a>
                                            </li>
                                            @if (!string.IsNullOrEmpty(SessionHelper.Usuario.Nombre) && !string.IsNullOrEmpty(SessionHelper.Usuario.Apellido) && !string.IsNullOrEmpty(SessionHelper.Usuario.Foto) && !string.IsNullOrEmpty(SessionHelper.Usuario.UserName))
                                            {
                                                <li class="nav-item">
                                                    <a class="nav-link" href="@Url.Action("MisPropuestas", "Propuesta")"><i class="fa fa-id-card mr-1"></i>Mis Propuestas</a>
                                                </li>
                                            }
                                            @if (SessionHelper.Usuario.TipoUsuario == (int)TipoUsuario.Administrador)
                                            {
                                                <li class="nav-item">
                                                    <a class="nav-link" href="@Url.Action("Gestion", "Denuncias")"><i class="fas fa-tasks mr-1"></i>Denuncias</a>
                                                </li>
                                            }
                                            <li class="nav-item">
                                                <a class="nav-link" href="@Url.Action("CerrarSession", "Seguridad")"><i class="fas fa-sign-in-alt mr-1"></i>Salir</a>
                                            </li>
                                        </ul>
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </div>
</header>