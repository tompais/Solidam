@Styles.Render("~/Content/Views/Usuario/IniciarRegistrar.css")
@Scripts.Render("~/Scripts/Views/Usuario/RegistroExitoso.js");

@{
    ViewBag.Title = "Registro Exitoso";
    Layout = "~/Views/Shared/_AnonimoLayout.cshtml";
}

<body class="my-login-page">
    <div class="container mt-5">

        <div class="jumbotron pt-3 bg-white">

            <div class="text-center my-0">
                <img alt="" src="../../Images/Views/Inicio/Logotipo.png">
            </div>

            <div class="text-center ">

                <h2 class="mx-0 mt-3"> Gracias por registrarse en Solidam</h2>
                <p class="lead"><strong>Por favor revisa tu Email</strong> alli recibiras un mensaje para poder activar tu cuenta. </p>
                <hr>

                <span>
                    Pueder continuar dandole al boton, o esperar 5 segundos.
                </span>

                <p class="lead mt-3">
                    <a class="btn btn-primary btn-sm" id="btnContinuar" href="@Url.Action("Iniciar","Usuario")">Continuar</a>
                </p>

            </div>
        </div>

    </div>
</body>